<Window name="BustedGUI" handleinput="true" popable="true" layer="popup" savesettings="false" movable="false"
        alpha="0.97">
    <Size>
        <AbsPoint x="500" y="125"/>
    </Size>
    <Anchors>
        <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="DebugWindow">
            <AbsPoint x="0" y="125"/>
        </Anchor>
        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="DebugWindow">
            <AbsPoint x="0" y="125"/>
        </Anchor>
    </Anchors>

    <Windows>
        <Window name="$parentBack" layer="background" inherits="EA_Window_DefaultFrame" handleinput="false"
                alpha="0.97">
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
            </Anchors>
        </Window>

        <Label name="$parentAddonText" font="font_clear_small_bold" textalign="center" layer="popup"
               popable="false" handleinput="false">
            <Size>
                <AbsPoint x="100" y="29"/>
            </Size>
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                    <AbsPoint x="-4" y="11"/>
                </Anchor>
            </Anchors>
            <Color r="255" g="255" b="255" a="255"/>
        </Label>

        <ComboBox name="$parentAddonSelect" inherits="EA_ComboBox_DefaultResizable3">
            <Size>
                <AbsPoint x="250" y="29"/>
            </Size>
            <MenuButtonOffset x="12" y="5"/>
            <Anchors>
                <Anchor point="right" relativePoint="left" relativeTo="$parentAddonText"/>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnSelChanged" function="BustedGUI.SelectAddonView"/>
            </EventHandlers>
        </ComboBox>

        <Button name="$parentPrevError" inherits="EA_Button_DefaultMinus" layer="popup">
            <Anchors>
                <Anchor point="right" relativePoint="left" relativeTo="$parentAddonSelect">
                    <AbsPoint x="8" y="0"/>
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="BustedGUI.SelectPrevError"/>
            </EventHandlers>
        </Button>

        <Label name="$parentErrorText" font="font_clear_small_bold" textalign="center" layer="popup"
               popable="false" handleinput="false">
            <Size>
                <AbsPoint x="70" y="29"/>
            </Size>
            <Anchors>
                <Anchor point="right" relativePoint="left" relativeTo="$parentPrevError">
                    <AbsPoint x="4" y="0"/>
                </Anchor>
            </Anchors>
            <Color r="255" g="255" b="255" a="255"/>
        </Label>

        <Button name="$parentNextError" inherits="EA_Button_DefaultPlus" layer="popup">
            <Anchors>
                <Anchor point="right" relativePoint="left" relativeTo="$parentErrorText">
                    <AbsPoint x="4" y="0"/>
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="BustedGUI.SelectNextError"/>
            </EventHandlers>
        </Button>

        <FullResizeImage name="$parentCountBackground" inherits="EA_FullResizeImage_TanBorder"
                         handleinput="false" layer="default">
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentPrevError">
                    <AbsPoint x="-5" y="-5"/>
                </Anchor>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentNextError">
                    <AbsPoint x="5" y="5"/>
                </Anchor>
            </Anchors>
        </FullResizeImage>

        <EditBox name="$parentErrorMessage" inherits="EA_EditBox_DefaultFrame_Multiline" maxchars="76000"
                 font="font_clear_small_bold" wordwrap="false" handleinput="true">
            <Anchors>
                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentAddonText">
                    <AbsPoint x="12" y="4"/>
                </Anchor>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                    <AbsPoint x="-10" y="-41"/>
                </Anchor>
            </Anchors>
        </EditBox>

        <Label name="$parentTimeText" font="font_clear_small_bold" textalign="leftcenter" layer="default"
               popable="false" handleinput="false">
            <Size>
                <AbsPoint x="200" y="22"/>
            </Size>
            <Anchors>
                <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parent">
                    <AbsPoint x="16" y="-11"/>
                </Anchor>
            </Anchors>
            <Color r="255" g="255" b="255" a="255"/>
        </Label>

        <Label name="$parentRepeatText" font="font_clear_small_bold" textalign="rightcenter" layer="popup"
               popable="false" handleinput="false">
            <Size>
                <AbsPoint x="200" y="22"/>
            </Size>
            <Anchors>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                    <AbsPoint x="-16" y="-11"/>
                </Anchor>
            </Anchors>
            <Color r="255" g="255" b="255" a="255"/>
        </Label>

    </Windows>

</Window>