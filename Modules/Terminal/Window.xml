<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Include file="VerticalScroll.xml" />
    <Windows>
        <Window name="DebugWindow" movable="true" layer="popup" savesettings="true" alpha="0.97" handleinput="true">
            <Size>
                <AbsPoint x="800" y="650"/>
            </Size>
            <EventHandlers>
                <EventHandler event="OnInitialize" function="DebugWindow.OnInitializeWindow" />
               <EventHandler event="OnUpdate" function="warExtendedTerminal.OnUpdateWindow" />
               <EventHandler event="OnLButtonUp" function="warExtendedTerminal.WindowOnLButtonUp" />
               <EventHandler event="OnLButtonDown" function="warExtendedTerminal.WindowOnLButtonDown" />
                <EventHandler event="OnShutdown" function="warExtendedTerminal.Shutdown"/>
                <EventHandler event="OnKeyEscape" function="warExtendedTerminal.OnKeyEscape"/>
                <EventHandler event="OnShown" function="warExtendedTerminal.OnShown"/>
                <EventHandler event="OnHidden" function="warExtendedTerminal.OnHidden"/>
            </EventHandlers>
            <Windows>

                <Window name="$parentBackground" inherits="EA_Window_DefaultFrame">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft">
                            <AbsPoint x="0" y="30"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright"/>
                    </Anchors>
                </Window>
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />


                <LogDisplay name="$parentText" font="font_clear_small_bold" autoHideScrollBar="true"
                            scrollbar="$parentScrollbar" scrollbarPosition="right" background="" maxchars="4096"
                            maxentries="-1" textFadeTime="30" handleinput="true">
                    <Size>
                        <AbsPoint x="780" y="390"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground">
                            <AbsPoint x="10" y="10"/>
                        </Anchor>
                        <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentLogDisplaySeperator">
                            <AbsPoint x="-10" y="10"/>
                        </Anchor>
                    </Anchors>

                    <Windows>

                        <VerticalScrollbar name="$parentScrollbar" inherits="EA_ScrollBar_ChatVertical" alpha="0.97">
                            <Anchors>
                                <Anchor point="bottomright" relativePoint="bottomleft">
                                    <AbsPoint x="-24" y="-28"/>
                                </Anchor>
                                <Anchor point="topright" relativePoint="topright"/>
                            </Anchors>

                        </VerticalScrollbar>
                        <Button name="$parentToBottomButton" inherits="EA_Button_DefaultChatScrollToBottom"
                                sticky="false">
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentScrollbar">
                                    <AbsPoint x="0" y="0"/>
                                </Anchor>
                            </Anchors>
                            <EventHandlers>
                                <EventHandler event="OnLButtonUp" function="warExtendedTerminal.ScrollToBottom"/>
                            </EventHandlers>
                        </Button>

                    </Windows>
                </LogDisplay>

                <!-- DEV PAD FUNCTIONS -->


                <Window name="$parentLogDisplaySeperator" inherits="EA_Window_DefaultSeparator" handleinput="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentButtonBackground">
                            <AbsPoint x="0" y="-2"/>
                        </Anchor>
                        <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentButtonBackground">
                            <AbsPoint x="0" y="-2"/>
                        </Anchor>
                    </Anchors>
                </Window>

                <EditBox name="$parentTextBox" inherits="EA_EditBox_DefaultFrame" maxchars="4096" history="30"
                         font="font_clear_small_bold" alpha="0.97">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentLogDisplaySeperator">
                            <AbsPoint x="8" y="18"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentLogDisplaySeperator">
                            <AbsPoint x="-8" y="18"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnKeyEnter" function="warExtendedTerminal.TextSend"/>
                        <EventHandler event="OnKeyEscape" function="warExtendedTerminal.TextClear"/>
                        <EventHandler event="OnTextChanged" function="warExtendedTerminal.AutoSender"/>
                        <EventHandler event="OnShown" function="warExtendedTerminal.OnShowFocus"/>
                        <EventHandler event="OnKeyTab" function="warExtendedTerminal.OnKeyTab"/>
                    </EventHandlers>
                </EditBox>

                <Window name="$parentLogDisplaySeperator2" inherits="EA_Window_DefaultFrame" handleinput="false">
                    <Size>
                        <AbsPoint x="800" y="35"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="bottomleft" relativeTo="DebugWindow">
                            <AbsPoint x="0" y="40"/>
                        </Anchor>
                        <Anchor point="topright" relativePoint="bottomright" relativeTo="DebugWindow">
                            <AbsPoint x="0" y="40"/>
                        </Anchor>
                    </Anchors>
                </Window>


                <Label name="$parentMouseOverLabel" font="font_clear_small_bold" maxchars="256" handleinput="false">
                    <Size>
                        <AbsPoint x="160" y="30"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentLogDisplaySeperator2">
                            <AbsPoint x="15" y="8"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <Label name="$parentMouseOverText" font="font_clear_small_bold" maxchars="256" handleinput="false">
                    <Size>
                        <AbsPoint x="700" y="30"/>
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentMouseOverLabel">
                            <AbsPoint x="-5" y="0"/>
                        </Anchor>
                    </Anchors>
                </Label>

                <Label name="$parentMousePointLabel" font="font_clear_small_bold" maxchars="256" handleinput="false">
                    <Size>
                        <AbsPoint x="130" y="30"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parentLogDisplaySeperator2">
                            <AbsPoint x="-90" y="8"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <Label name="$parentMousePointText" font="font_clear_small_bold" maxchars="256" handleinput="false">
                    <Size>
                        <AbsPoint x="100" y="30"/>
                    </Size>
                    <Anchors>

                        <Anchor point="right" relativePoint="left" relativeTo="$parentMousePointLabel">
                            <AbsPoint x="-5" y="0"/>
                        </Anchor>
                    </Anchors>
                </Label>

                <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background"
                        alpha="0">
                    <Size>
                        <AbsPoint x="0" y="20"/>
                    </Size>
                </Window>

                <Button name="$parentToggleLogging" inherits="EA_Button_DefaultText" font="font_clear_small_bold"
                        textalign="center" alpha="0">
                    <Size>
                        <AbsPoint y="32" x="80"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topright" relativeTo="$parentToggleOptions">
                            <AbsPoint x="-5" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.ToggleLogging"/>
                    </EventHandlers>
                </Button>
                <Button name="$parentToggleOptions" inherits="EA_Button_DefaultText" font="font_clear_small_bold"
                        textalign="center" alpha="0">
                    <Size>
                        <AbsPoint y="32" x="80"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topright" relativeTo="$parentClose">
                            <AbsPoint x="-5" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.ToggleOptions"/>
                    </EventHandlers>
                </Button>

                <Button name="$parentClose" inherits="EA_Button_DefaultText" font="font_clear_small_bold"
                        textalign="center" alpha="1">
                    <Size>
                        <AbsPoint y="32" x="80"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright">
                            <AbsPoint x="15" y="5"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.Hide"/>
                    </EventHandlers>
                </Button>

                <Button name="$parentResizeButton" inherits="CoreWindowResizeButtonBottomRight" layer="popup">
                    <Anchors>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonDown" function="warExtendedTerminal.OnResizeBegin"/>
                    </EventHandlers>
                </Button>

            </Windows>
        </Window>

        <!--- Options Window -->
        <Window name="DebugWindowOptions" layer="overlay" movable="false" alpha="0.97">
            <Size>
                <AbsPoint x="310" y="500"/>
            </Size>
            <Anchors>
                <Anchor point="right" relativePoint="right" relativeTo="DebugWindow">
                    <AbsPoint x="310" y="-5"/>
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnShown" function="warExtendedTerminal.OnShowFocus"/>
                <EventHandler event="OnHidden" function="warExtendedTerminal.OnShowFocus"/>
            </EventHandlers>
            <Windows>

                <Window name="$parentBackground" inherits="EA_Window_DefaultFrame">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft">
                            <AbsPoint x="0" y="32"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright"/>
                    </Anchors>
                </Window>

                <Button name="$parentClose" inherits="EA_Button_DefaultText" textalign="center" alpha="0"
                        font="font_clear_small_bold">
                    <Size>
                        <AbsPoint y="32" x="80"/>
                    </Size>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.HideOptions"/>
                    </EventHandlers>
                    <Anchors>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="">
                            <AbsPoint x="0" y="-12"/>
                        </Anchor>
                    </Anchors>
                </Button>

                <Button name="$parentClearLogText" inherits="EA_Button_DefaultText" textalign="center" alpha="0"
                        font="font_clear_small_bold">
                    <Size>
                        <AbsPoint y="32" x="80"/>
                    </Size>
                    <Anchors>
                        <Anchor point="left" relativePoint="right" relativeTo="$parentClose">
                            <AbsPoint x="0" y="-0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.ClearTextLog"/>
                    </EventHandlers>
                </Button>
                <Label name="$parentFiltersTitle" inherits="EA_Settings_SectionTitle" font="font_clear_small_bold"
                       textalign="left">
                    <Size>
                        <AbsPoint x="400" y="15"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="25" y="45"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <Window name="$parentFilterType1" font="font_clear_small_bold" inherits="LogFilterButton" id="1">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFiltersTitle">
                            <AbsPoint x="20" y="15"/>
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentFilterType2" font="font_clear_small_bold" inherits="LogFilterButton" id="2">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFilterType1">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentFilterType3" font="font_clear_small_bold" inherits="LogFilterButton" id="3">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFilterType2">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentFilterType4" font="font_clear_small_bold" inherits="LogFilterButton" id="4">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFilterType3">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentFilterType5" font="font_clear_small_bold" inherits="LogFilterButton" id="5">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFilterType11">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentFilterType6" font="font_clear_small_bold" inherits="LogFilterButton" id="6">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFilterType5">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentFilterType9" font="font_clear_small_bold" inherits="LogFilterButton" id="9">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFilterType6">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentFilterType10" font="font_clear_small_bold" inherits="LogFilterButton" id="10"
                        visible="false">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFilterType9">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentFilterType11" font="font_clear_small_bold" inherits="LogFilterButton" id="11">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFilterType4">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>

                <Label name="$parentErrorHandlingTitle" inherits="EA_Settings_SectionTitle" font="font_clear_small_bold"
                       textalign="left">
                    <Size>
                        <AbsPoint x="400" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="25" y="320"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <Window name="$parentErrorOption1" inherits="EA_LabelCheckButtonSmallCopy" id="1">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentErrorHandlingTitle">
                            <AbsPoint x="20" y="8"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.UpdateLuaErrorHandling"/>
                    </EventHandlers>
                </Window>
                <Window name="$parentErrorOption2" inherits="EA_LabelCheckButtonSmallCopy" id="1">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentErrorOption1">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.UpdateCodeErrorHandling"/>
                    </EventHandlers>
                </Window>

                <Window name="$parentLuaDebugLibrary" inherits="EA_LabelCheckButtonSmallCopy" id="1">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentErrorOption2">
                            <AbsPoint x="0" y="14"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.UpdateLoadLuaDebugLibrary"/>
                    </EventHandlers>
                </Window>

                <Window name="EA_LabelCheckButtonSmallCopy" inherits="EA_LabelCheckButton" showing="false">
                    <Size>
                        <AbsPoint x="280" y="28"/>
                    </Size>
                    <Windows>
                        <Button name="$parentButton" inherits="EA_CheckButtonButton"/>
                        <Label name="$parentLabel" inherits="EA_CheckButtonLabel" handleinput="false"
                               textAutoFitMinScale="0.5" font="font_clear_small_bold">
                            <Size>
                                <AbsPoint x="255" y="28"/>
                            </Size>
                            .
                        </Label>
                    </Windows>
                </Window>

                <Window name="LogFilterButton" inherits="EA_LabelCheckButtonSmallCopy" id="1" showing="false">
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedTerminal.UpdateDisplayFilter"/>
                    </EventHandlers>
                </Window>


            </Windows>
        </Window>

    </Windows>


</Interface>
