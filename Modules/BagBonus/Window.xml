<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">>
    <Windows>

        <Window name="BagBonusWindow" movable="true" savesettings="false" layer="secondary">
            <Size>
                <AbsPoint x="165" y="300"/>
            </Size>
            <Anchors>
                <Anchor point="right" relativePoint="right" relativeTo="">
                    <AbsPoint x="-150" y="0"/>
                </Anchor>
            </Anchors>
            <Windows>
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default"/>
                <DynamicImage name="$parentCornerImage" inherits="EA_Default_BagImage" textureScale="0.58">
                    <Anchors>
                    <Anchor point="left" relativePoint="center" relativeTo="$parentTitleBar">
                        <AbsPoint x="0" y="-14"/>
                    </Anchor>
                    </Anchors>
                        <Size>
                            <AbsPoint x="68" y="68" />
                        </Size>
                </DynamicImage>

                <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft">
                            <AbsPoint x="0" y="10"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright">
                            <AbsPoint x="-10" y="0"/>
                        </Anchor>
                    </Anchors>
                </Window>

                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose">
                    <Anchors>
                        <Anchor point="topright" relativePoint="center" relativeTo="$parentBackground">
                            <AbsPoint x="-5" y="5"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedBagBonus.ToggleBagBonusWindow"/>
                    </EventHandlers>
                </Button>

                <Label name="$parentTitle" font="font_clear_small_bold" textalign="center">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentTitleBar">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentTitleBar"> </Anchor>
                    </Anchors>
                </Label>

            </Windows>
        </Window>
    </Windows>
</Interface>