<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

    <Windows>

        <!--*******************************************************************-->
        <!--                      Whole Window Definition                      -->
        <!--*******************************************************************-->
        <Window name="warExtendedOptions" inherits="EA_Window_Default" movable="true" layer="secondary" savesettings="false">
            <Size>
                <AbsPoint x="900" y="605"/>
            </Size>
            <Anchors>
                <Anchor point="center" relativePoint="center" relativeTo="EA_Window_Help">
                    <AbsPoint x="0" y="0"/>
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnInitialize"  function="warExtended.OptionsOnInitialize"/>
                <EventHandler event="OnShutdown"    function="warExtended.OptionsOnShutdown"/>
                <EventHandler event="OnShown"       function="WindowUtils.OnShown" />
                <EventHandler event="OnHidden"      function="WindowUtils.OnHidden" />
            </EventHandlers>
            <Windows>

                <!-- Title Bar, Close button, and Corner Image -->
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />
                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose">
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedOptions.Hide" />
                    </EventHandlers>
                </Button>
                <DynamicImage name="$parentCornerImage" inherits="EA_Default_HelpImage"/>

                <!-- Main Window Background -->
                <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" handleinput="true" popable="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" >
                            <AbsPoint x="0" y="32" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" />
                    </Anchors>
                </Window>

                <!-- Help Title Text-->
                <Label name="$parentHeaderText" font="font_default_heading" maxchars="32" textalign="center" autoresize="false" popable="false">
                    <Size>
                        <AbsPoint x="900" y="32" />
                    </Size>
                    <Anchors>
                        <Anchor point="top" relativePoint="top" relativeTo="$parentBackground">
                            <AbsPoint x="0" y="15" />
                        </Anchor>
                    </Anchors>
                </Label>

                <!-- Top Seperator -->
                <Window name="$parentTopSeperator" inherits="EA_Window_DefaultSeparator" handleinput="false" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentBackground" >
                            <AbsPoint x="0" y="64" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentBackground" >
                            <AbsPoint x="0" y="64" />
                        </Anchor>
                    </Anchors>
                </Window>

                <ListBox name="$parentList" scrollbar="ManualWindowVertScroll" rowdef="ManualWindowRow" visiblerows="17" rowcount="100" rowspacing="0">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentTopSeperator">
                            <AbsPoint x="10" y="-8"/>
                        </Anchor>
                        <Anchor point="topleft" relativePoint="bottomright" relativeTo="$parentButtonBackground">
                            <AbsPoint x="340" y="8"/>
                        </Anchor>
                    </Anchors>
                    <ListData table="warExtended.OptionsListBoxData" populationfunction="warExtended.UpdateOptionsWindowRow">
                        <ListColumns>
                            <ListColumn windowname="Name" variable="name"  format="wstring" />
                        </ListColumns>
                    </ListData>
                </ListBox>

                <!-- Main  Window -->
                <ScrollWindow name="OptionsWindowMain" childscrollwindow="ManualWindowMainScrollChild" scrollbar="ManualWindowMainScrollbar" lineheight="18">

                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parentList" >
                            <AbsPoint x="10" y="0" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentButtonBackground" >
                            <AbsPoint x="-15" y="0" />
                        </Anchor>
                    </Anchors>
                    <Windows>
                        <VerticalScrollbar name="$parentScrollbar" inherits="EA_ScrollBar_DefaultVerticalChain" layer="popup">
                            <Size>
                                <AbsPoint x="20" y="200"/>
                            </Size>
                            <Anchors>
                                <Anchor point="topright" relativePoint="topright">
                                    <AbsPoint x="4" y="0"/>
                                </Anchor>
                            </Anchors>
                        </VerticalScrollbar>
                        <Window name="$parentScrollChild">
                            <Size>
                                <AbsPoint x="320" y="0"/>
                            </Size>
                            <Windows>

                                <!-- Topic title -->
                                <Label name="OptionsWindowTopicLabel" inherits="DefaultWindowSubTitle" textalign="left">
                                    <Size>
                                        <AbsPoint x="500" y="25" />
                                    </Size>
                                    <Anchors>
                                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                                            <AbsPoint x="5" y="5" />
                                        </Anchor>
                                    </Anchors>
                                    <Color r="255" g="204" b="102" a="255"/>
                                </Label>

                                <!-- Topic's Text -->
                                <Label name="OptionsWindowTopicText" font="font_chat_text" maxchars="4096" textalign="left" wordwrap="true" autoresize="true">
                                    <Size>
                                        <AbsPoint x="500" y="200"/>
                                    </Size>
                                    <Anchors>
                                        <Anchor point="topleft" relativePoint="topleft" relativeTo="OptionsWindowTopicLabel">
                                            <AbsPoint x="5" y="30" />
                                        </Anchor>
                                    </Anchors>
                                    <Color r="255" g="255" b="255" a="255" />
                                </Label>

                            </Windows>
                        </Window>
                    </Windows>
                </ScrollWindow>

                <!-- Button Bar Barground -->
                <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" >
                    <Size>
                        <AbsPoint x="0" y="75" />
                    </Size>
                </Window>

                <!-- Back Button -->
                <Button name="$parentBackButton" inherits="EA_Button_DefaultResizeable" >
                    <Size>
                        <AbsPoint x="150" y="39" />
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="right" relativeTo="$parentButtonBackgroundButtonBackgroundFill">
                            <AbsPoint x="-25" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedOptions.OnLButtonUpBackButton" />
                    </EventHandlers>
                </Button>

            </Windows>
        </Window>

    </Windows>
</Interface>