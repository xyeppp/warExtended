<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Windows>
        <Label name="warExtendedColumnLabel" font="font_default_text" maxchars="32" textalign="leftcenter">
            <Size>
                <AbsPoint x="225" y="20"/>
            </Size>
            <Color r="128" g="255" b="255" a="255"/>
        </Label>

        <Label name="DefaultWindowSmallText" font="font_clear_default" maxchars="64" textalign="center">
            <Size>
                <AbsPoint x="350" y="30" />
            </Size>
            <Color r="255" g="255" b="255" a="255" />
        </Label>

        <Label name="DefaultWindowText" font="font_default_text" maxchars="64" textalign="left">
            <Color r="255" g="255" b="255" a="255" />
        </Label>

        <Label name="DefaultWindowSubTitle" font="font_default_sub_heading" maxchars="64" textalign="center">
            <Size>
                <AbsPoint x="350" y="30" />
            </Size>
            <Color r="255" g="255" b="255" a="255" />
        </Label>

        <Window name="warExtendedColumnDuoLabelSmall">
            <Size>
                <AbsPoint x="150" y="150"/>
            </Size>
            <Windows>
                <Label name="$parentColumn" inherits="warExtendedColumnLabel" wordwrap="true" textalign="center">
                    <Size>
                        <AbsPoint x="120" y="40"/>
                    </Size>
                    <Color r="242" g="169" b="53" a="255"/>
                </Label>

                <Label name="$parentElement" font="font_clear_small_bold" maxchars="256" wordwrap="true"
                       handleinput="false" textalign="center">
                    <Size>
                        <AbsPoint x="120" y="40"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="center" relativeTo="$parentColumn">
                            <AbsPoint x="0" y="15"/>
                        </Anchor>
                    </Anchors>
                </Label>
            </Windows>
        </Window>

        <Window name="warExtendedColumnDuoLabelMedium">
            <Size>
                <AbsPoint x="150" y="150"/>
            </Size>
            <Windows>
                <Label name="$parentColumn" inherits="warExtendedColumnLabel" font="font_default_text_huge" wordwrap="true" textalign="center">
                    <Size>
                        <AbsPoint x="120" y="40"/>
                    </Size>
                    <Color r="242" g="169" b="53" a="255"/>
                </Label>

                <Label name="$parentElement" font="font_clear_medium_bold" maxchars="256" wordwrap="true"
                       handleinput="false" textalign="center">
                    <Size>
                        <AbsPoint x="120" y="40"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="center" relativeTo="$parentColumn">
                            <AbsPoint x="0" y="15"/>
                        </Anchor>
                    </Anchors>
                </Label>
            </Windows>
        </Window>

        <Window name="warExtendedColumnDuoLabelLarge">
            <Size>
                <AbsPoint x="150" y="150"/>
            </Size>
            <Windows>
                <Label name="$parentColumn" inherits="warExtendedColumnLabel" font="font_default_text_huge" wordwrap="true" textalign="center">
                    <Size>
                        <AbsPoint x="120" y="40"/>
                    </Size>
                    <Color r="242" g="169" b="53" a="255"/>
                </Label>

                <Label name="$parentElement" font="font_clear_large_bold" maxchars="256" wordwrap="true"
                       handleinput="false" textalign="center">
                    <Size>
                        <AbsPoint x="120" y="40"/>
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="center" relativeTo="$parentColumn">
                            <AbsPoint x="0" y="15"/>
                        </Anchor>
                    </Anchors>
                </Label>
            </Windows>
        </Window>
    </Windows>

</Interface>
