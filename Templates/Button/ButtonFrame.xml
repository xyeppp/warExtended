<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

    <Windows>
        <!-- Default Icon Button -->
        <Button name="DefaultButton">
            <Sounds>
                <Sound event="OnLButtonDown" script="Sound.Play( Sound.BUTTON_CLICK )" />
                <Sound event="OnMouseOver" script="Sound.Play( Sound.BUTTON_OVER )" />
            </Sounds>
        </Button>

        <Button name="DefaultIconButton" inherits="DefaultButton" texturescale="0.759" font="font_default_text" textalign="bottomright" drawchildrenfirst="true">
            <Size>
                <AbsPoint x="42" y="42" />
            </Size>
            <Windows>
                <DynamicImage name="$parentIconBase" textureScale="0.759" handleinput="false" layer="background">
                    <Size>
                        <AbsPoint x="42" y="42" />
                    </Size>
                </DynamicImage>
            </Windows>
            <TexCoords>
                <Normal texture="icon_frame_square" x="0" y="0" />
                <NormalHighlit texture="icon_frame_square_highlight" x="0" y="0" />
                <Pressed texture="icon_frame_square_pressed" x="0" y="0" />
                <Disabled texture="icon_frame_square" x="0" y="0" />
            </TexCoords>
            <TextOffset x="5" />
        </Button>

        <!--Title Bar Close Button-->
        <Button name="warExtendedCloseButton" inherits="EA_Button_Default" backgroundtexture="shared_01"
                highlighttexture="shared_01" layer="popup">
            <Size>
                <AbsPoint x="37" y="37"/>
            </Size>
            <Anchors>
                <Anchor point="topright" relativePoint="topright" relativeTo="">
                    <AbsPoint x="5" y="0"/>
                </Anchor>
            </Anchors>
            <TexCoords>
                <Normal x="274" y="46"/>
                <NormalHighlit x="274" y="83"/>
                <Pressed x="274" y="120"/>
                <PressedHighlit x="274" y="120"/>
                <Disabled x="274" y="46"/>
            </TexCoords>
        </Button>

        <!--Bottom Tabs With Disabled Texture Added -->
        <Button name="warExtendedBottomTab" font="font_clear_small_bold"  wordwrap="true" inherits="warExtendedTopTab" textalign="center">
            <Size>
                <AbsPoint x="100" y="47" />
            </Size>
            <ResizeImages>
                <Normal             def="EA_Button_BottomTabNormal"  />
                <NormalHighlit      def="EA_Button_BottomTabHighlit" />
                <Pressed            def="EA_Button_BottomTabPressed" />
                <PressedHighlit     def="EA_Button_BottomTabPressed" />
                <Disabled           def="EA_Button_BottomTabDisabled" />
            </ResizeImages>
            <TextColors>
                <Normal             r="222" g="192" b="50" />
                <NormalHighlit      r="222" g="192" b="50" />
                <Pressed            r="235" g="235" b="235" />
                <PressedHighlit     r="255" g="85" b="0" />
                <Disabled           r="75"  g="75"  b="75"/>
            </TextColors>
        </Button>

      <!--Resize Button -->
        <Button name="warExtendedDefaultResizeButton" inherits="CoreWindowResizeButtonBottomRight" layer="popup">
            <Anchors>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentBackground">
                    <AbsPoint x="0" y="0"/>
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnLButtonDown" function="warExtended.OnResizeWindow"/>
            </EventHandlers>
        </Button>

        <Button name="warExtendedTopTab" inherits="EA_Button_Tab">
            <Size>
                <AbsPoint x="124" y="35" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="FrameManager.OnLButtonUp" />
                <EventHandler event="OnMouseOver" function="FrameManager.OnMouseOver" />
            </EventHandlers>
            <TextOffset x="0" y="0" />
        </Button>





    </Windows>
</Interface>