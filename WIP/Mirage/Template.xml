<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Windows>

        <Button name="warExtendedMirageListRowTemplate" inherits="EA_Button_DefaultListRow" >
            <Size>
                <AbsPoint x="458" y="34"/>
            </Size>

            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="warExtendedMirage.OnLButtonUpListRow" />
            </EventHandlers>

            <Windows>

                <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" />
                        <Anchor point="bottomright" relativePoint="bottomright" />
                    </Anchors>
                </FullResizeImage>

                <Label name="$parentWindowName" font="font_chat_text" >
                    <Size>
                        <AbsPoint x="340" y="26"/>
                    </Size>
                    <Anchors>
                        <Anchor point="left" relativePoint="left" relativeTo="">
                            <AbsPoint x="10" y="3"/>
                        </Anchor>
                    </Anchors>
                </Label>

                <Label name="$parentStatus" font="font_chat_text" >
                    <Size>
                        <AbsPoint x="120" y="26"/>
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentWindowName">
                            <AbsPoint x="5" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedMirage.OnLButtonUpShowStatus" />
                        <EventHandler event="OnMouseOver" function="warExtendedMirage.OnMouseOverShowStatus" />
                    </EventHandlers>
                </Label>

            </Windows>
        </Button>


        <Button name="warExtendedMirageSortButtonTemplate" inherits="EA_Button_ListSort" >
            <Size>
                <AbsPoint x="245" y="31" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="warExtendedMirage.OnLButtonUpListSortButton" />
                <EventHandler event="OnMouseOver" function="warExtendedMirage.OnLButtonUpListSortButton" />
            </EventHandlers>
        </Button>

        <Label name="warExtendedMirageWindowDetailsLabelTemplate" font="font_chat_text" autoresize="true" textalign="left" handleinput="false" wordwrap="true" >
            <Size>
                <AbsPoint x="200" y="16" />
            </Size>
            <Color r="255" g="204" b="102" />
        </Label>



    </Windows>
</Interface>