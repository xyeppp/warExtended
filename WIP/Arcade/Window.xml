<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Windows>
          <!-- The main window -->
        <Window name="warExtendedArcade" layer="secondary" movable="true" inherits="EA_Window_Default" savesettings="false">
            <Size>
                <AbsPoint x="540" y="800" />
            </Size>
            <EventHandlers>
            <EventHandler event="OnInitialize"  function="warExtendedSpaceInvaders.OnInitializeWindow" />
                 <!--  <<EventHandler event="OnShutdown"    function="warExtendedAsteroids.OnShutdownWindow" />-->

                <EventHandler event="OnRawDeviceInput" function="warExtendedSpaceInvaders.OnRawDeviceInputKeyboardController" />
               <!--<EventHandler event="OnShown"       function="warExtendedAsteroids.OnShown" />
                <EventHandler event="OnHidden"      function="warExtendedAsteroids.OnHidden" />-->
            </EventHandlers>

            <Windows>
                <!-- Title Bar, close button block -->
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />
                <Size>
                    <AbsPoint x="530" y="32" />
                </Size>
                <DynamicImage name="$parentCornerImage" inherits="EA_Default_SettingsImage" texturescale="0.7">
                    <Size>
                        <AbsPoint x="84" y="84" />
                    </Size>
                </DynamicImage>

                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose">
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="warExtendedArcade.ToggleWindow" />
                    </EventHandlers>
                </Button>

                <Window name="$parentBackground" inherits="EA_Window_DefaultFrame" layer="background">
                    <Size>
                        <AbsPoint x="500" y="710" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentTitleBar">
                            <AbsPoint x="0" y="-5" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" />
                    </Anchors>
                </Window>

                <!-- Whole window background -->
                <Window name="$gameWindow" inherits="EA_Window_DefaultFrame" layer="background">
                    <Size>
                        <AbsPoint x="480" y="480" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentTitleBar">
                            <AbsPoint x="0" y="15" />
                        </Anchor>
                    </Anchors>
                </Window>

                <!-- Bottom frame block -->
                <Window name="$parentFooterSeparator" inherits="EA_Window_DefaultSeparator">
                    <Size>
                        <AbsPoint x="550" y="28" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parent">
                            <AbsPoint x="0" y="-50"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                            <AbsPoint x="0" y="-50"/>
                        </Anchor>
                    </Anchors>
                </Window>

                <!--Respec -->
                <Button name="$parentRespecializeButton" inherits="EA_Button_DefaultResizeable">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parent">
                            <AbsPoint x="20" y="-17"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="" />
                    </EventHandlers>
                </Button>

                <!-- Close the window redundantly -->
                <Button name="$parentCancelButton" inherits="EA_Button_DefaultResizeable">
                    <Anchors>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                            <AbsPoint x="-20" y="-17"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="" />
                    </EventHandlers>
                </Button>

            </Windows>
        </Window>



    </Windows>
</Interface>