<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">>
    <Windows>
        <Window name="warExtendedMeterEntryTemplate" layer="primary">
            <Windows>

                <DynamicImage name="$parentIcon" handleinput="false" layer="background">
                    <Size>
                        <AbsPoint x="32" y="32"/>
                    </Size>
                </DynamicImage>

                <Label name="$parentName" font ="font_clear_medium_bold" textalign="right">
                    <Size>
                        <AbsPoint x="90" y="30"/>
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentIcon">
                            <AbsPoint x="0" y="8"/>
                        </Anchor>
                    </Anchors>
                </Label>

                <StatusBar name="$parentStatusBar" inherits="EA_StatusBar_DefaultTintable" handleinput="false" backgroundalpha="0.5">
                    <Size>
                        <AbsPoint x="138" y="10"/>
                    </Size>
                    <Anchors>
                        <Anchor point="top" relativePoint="top" relativeTo="$parentSeparator">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </StatusBar>

            </Windows>
        </Window>
    </Windows>
</Interface>